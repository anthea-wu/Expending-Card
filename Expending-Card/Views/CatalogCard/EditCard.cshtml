@model List<Expending_Card.Models.CardsViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>編輯卡片</h2>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Order</th>
      <th scope="col">Card</th>
      <th scope="col" colspan="2">Details</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in @Model)
    {
        <tr>
            <th scope="row">@item.CatalogOrder</th>
            <td>@item.CatalogName</td>
            <td colspan="2">@item.CatalogName</td>
        </tr>
    }
  </tbody>
</table>
<div class="row">
    <div class="col-md-2">
        <form asp-controller="CatalogCard" asp-action="AddCard">
            <div class="text-danger"></div>
            <div class="form-group">
                <label name="name" class="control-label"></label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form asp-controller="CatalogCard" asp-action="DeleteCard">
            <div class="text-danger"></div>
            <div class="form-group">
                <label name="name" class="control-label"></label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>