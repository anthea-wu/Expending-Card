@using static Expending_Card.Models.CardsViewModel
@model List<Expending_Card.Models.CardsViewModel>

@{
    ViewData["Title"] = "卡片總覽";
    Layout = "_Layout";
}

<h2>類別卡片</h2>
<ol class="mt-3">
    @foreach (var item in @Model)
    {
        <li class="mt-0 mb-0">
            <a class="nav-link text-dark" asp-area="" asp-controller="CatalogCard" asp-action="ShowOneCard" asp-route-name="@item.CatalogName">@item.CatalogName</a>
        </li>
    }
</ol>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="CatalogCard" asp-action="AddCards">
            <div class="text-danger"></div>
            <div class="form-group">
                <label name="name" class="control-label"></label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="新增卡片" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>