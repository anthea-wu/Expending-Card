@model object

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>編輯卡片</h2>

<p>編輯資訊 - </p>
<div class="row">
    <div class="col-md-2">
        <form asp-controller="CatalogCard" asp-action="AddCard">
            <div class="text-danger"></div>
            <div class="form-group">
                <label name="name" class="control-label"></label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form asp-controller="CatalogCard" asp-action="DeleteCard">
            <div class="text-danger"></div>
            <div class="form-group">
                <label name="name" class="control-label"></label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>